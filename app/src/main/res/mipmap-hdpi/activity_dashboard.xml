<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/welcomeText" android:text="Welcome!" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnDonor" android:text="Donor Panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnPatient" android:text="Patient Panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnBloodBank" android:text="Blood Bank Panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/logoutBtn" android:text="Logout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
</LinearLayout>
